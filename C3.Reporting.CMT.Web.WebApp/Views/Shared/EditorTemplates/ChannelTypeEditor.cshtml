
@(Html.Kendo().DropDownList()
    .Name("ChannelTypeId") // Name of the widget should be the same as the name of the property
    .DataValueField("ChannelTypeId") // The value of the dropdown is taken from the EmployeeID property
    .DataTextField("ChannelTypeName") // The text of the items is taken from the EmployeeName property
    .BindTo((System.Collections.IEnumerable)ViewData["channelTypes"]) // A list of all employees which is populated in the controller
)