	<body>
		<header>
			<div class="content-wrapper">
			    <div class="float-left">
			        <div style="position: relative">
				            <img src="/Images/mecca_brands_logo_360x140.png" style="width: 135px; height: auto; margin: 0px 8px 0px 8px;" alt="C3"/>
				    </div>
			        <p class="site-title">
			            @Html.ActionLink("Campaign Management Tool", "Index", "Home")
			        </p>
			    </div>
			    <div class="float-right">
			        <section id="login">
                       Hello, <span class="username">@User.Identity.Name</span>
                    </section>
			        <nav>
			            <ul id="menu">
			                <li>@Html.ActionLink("Campaigns", "Campaign", "Campaign")</li>
                            <li>@Html.ActionLink("Campaign Items", "CampaignItems", "Campaign")</li>
			                <li>@Html.ActionLink("Segments", "Channel", "Channel")</li>
                            <li>@Html.ActionLink("Segment Items", "ChannelItems", "Channel")</li>
			                <li>@Html.ActionLink("Segment Customers", "ChannelCustomer", "Channel")</li>
			                <li>@Html.ActionLink("Archived Campaigns", "ArchivedCampaigns", "Campaign")</li>
