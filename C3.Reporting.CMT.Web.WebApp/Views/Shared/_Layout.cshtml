			            </ul>
			        </nav>
			    </div>
			</div>
		</header>
		<div id="body">
			@RenderSection("featured", required: false)
			<section class="content-wrapper main-content clear-fix">
				@RenderBody()
			</section>
		</div>

		<footer>
			<div class="content-wrapper">
				<div class="float-left">
					<p>&copy; @DateTime.Now.Year - Cosmetics Cubed Pty Ltd</p>
				</div>
			</div>
		</footer>
	</body>
</html>
